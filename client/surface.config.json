{
    "context":  ".",
    "entry":    "./source/index.ts",
    "filename": "[name]/[hash].js",
    "output":   "../server/wwwroot",
    "tsconfig": "./tsconfig.json",
    "tslint":   "../tslint.json",
    "htmlTemplate":
    {
        "template": "./template.html",
        "minify": false
    },
    "simblingResolve":
    {
        "from":    ".js",
        "to":      ".ts",
        "include": ["./node_modules/@surface", "../modules/source/@surface"]
    }
}