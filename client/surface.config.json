{
    "context":  "source",
    "entry":    "app/index.ts",
    "filename": "[name]/[hash].js",
    "output":   "../../server/wwwroot",
    "codeSplitter":
    {
        "entries":          ["views"],
        "output":           "@surface/lazy-loader",
        "useAbsolutePaths": true
    },
    "htmlTemplate":
    {
        "filename": "[name]/index.html",
        "template": "template.html"
    },
    "simblingResolve":
    [
        {
            "from":    ".js",
            "to":      ".ts",
            "include": ["../node_modules/@surface", "../../modules/source/@surface"],
            "exclude": ["../node_modules/@surface/lazy-loader", "../../modules/source/@surface/lazy-loader"]
        },
        {
            "from":    ".ts",
            "to":      ".js",
            "include": ["../node_modules/@surface/lazy-loader", "../../modules/source/@surface/lazy-loader"]
        }
    ]
}