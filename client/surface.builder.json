{
    "$schema": "../modules/packages/@surface/builder/schema.json",
    "clean": false,
    "devServer": {
        "compress": true,
        "hot": true,
        "liveReload": false,
        "open": true,
        "port": 1337
    },
    "logging": "minimal",
    "projects": {
        "app": {
            "entry": "./source/index.ts",
            "environments": {
                "production": {
                    "overrides": [
                        {
                            "replace": "./source/enviroments/settings.ts",
                            "with": "./source/enviroments/settings.production.ts"
                        }
                    ],
                    "variables": [
                        "USERNAME"
                    ]
                }
            },
            "eslint": {
                "enabled": true
            },
            "htmlx": {
                "attributeHandlers": [
                    {
                        "attribute": "src",
                        "tag": "app-img",
                        "type": "src"
                    }
                ],
                "mode": "aot"
            },
            "index": "./index.html",
            "mode": "production",
            "output": "../server/wwwroot",
            "preferTs": [
                "../**/@surface/**"
            ],
            "target": "web"
        },
        "webworker": {
            "entry": "./source/another-service-worker.ts",
            "filename": "another-service-worker.js",
            "output": "../server/wwwroot",
            "target": "webworker"
        }
    }
}