{
    "version": "0.2.0",
    "configurations":
    [
        {
            "type":        "node",
            "request":     "launch",
            "name":        "Launch compiler",
            "program":     "${workspaceRoot}\\client\\node_modules\\@surface\\compiler\\index",
            "args":        ["-c", "client"],
            "cwd":         "${workspaceRoot}",
            "protocol":    "inspector"//,
            //"runtimeArgs": ["--preserve-symlinks"]

        },
        {
            "type":        "node",
            "request":     "launch",
            "name":        "Launch Server",
            "program":     "${workspaceRoot}\\server\\source\\index.js",
            "cwd":         "${workspaceRoot}\\server\\source",
            "runtimeArgs": ["--preserve-symlinks"]
        },
        {
            "type":        "node",
            "request":     "launch",
            "name":        "Launch Tests",
            "program":     "${workspaceRoot}\\modules\\tests\\build\\index.js",
            "cwd":         "${workspaceRoot}\\modules\\tests\\build",
            //"preLaunchTask": "tests[build]"
            "runtimeArgs": ["--preserve-symlinks"]
        },
        {
            "type":        "node",
            "request":     "launch",
            "name":        "Launch Build All",
            "program":     "${workspaceRoot}\\tasks\\build",
            "cwd":         "${workspaceRoot}\\client"
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Linking",
            "program":  "${workspaceRoot}\\tasks\\link",
            "args":     ["r"],
            "cwd":      "${workspaceRoot}\\tasks\\"
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Publish",
            "program":  "${workspaceRoot}\\tasks\\publish",
            "cwd":      "${workspaceRoot}\\tasks\\",
            "console":  "integratedTerminal"
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Install",
            "program":  "${workspaceRoot}\\tasks\\install",
            "cwd":      "${workspaceRoot}\\tasks\\",
            "console":  "integratedTerminal"
        },
        {
            "type":    "chrome",
            "request": "launch",
            "name":    "Launch Chrome against localhost",
            "url":     "http://localhost:1337",
            "webRoot": "${workspaceRoot}\\server\\wwwroot"
        },
        {
            "type":    "chrome",
            "request": "attach",
            "name":    "Attach to Chrome",
            "port":    9222,
            "webRoot": "${workspaceRoot}\\server\\wwwroot"
        }
    ]
}