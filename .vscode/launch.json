{
    "version": "0.2.0",
    "configurations":
    [
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Compiler",
            "program":  "${workspaceFolder}\\client\\node_modules\\@surface\\compiler\\index",
            "args":     ["-c", "client"],
            "cwd":      "${workspaceFolder}",
            "protocol": "inspector",
            "outFiles": ["${workspaceFolder}/**/*.js"],
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Code Splitter",
            "program":  "${workspaceFolder}\\client\\node_modules\\@surface\\code-splitter\\index",
            "args":     ["-c", "source", "-e", "views", "-o", "app/lazy-loader/index.ts"],
            "cwd":      "${workspaceFolder}\\client",
            "protocol": "inspector",
            "outFiles": ["${workspaceFolder}/**/*.js"],

        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Server",
            "program":  "${workspaceFolder}\\server\\source\\index.js",
            "cwd":      "${workspaceFolder}\\server\\source",
            "outFiles": ["${workspaceFolder}/**/*.js"],
        },
        {
            "type":    "node",
            "request": "launch",
            "name":    "Launch Build All",
            "program": "${workspaceFolder}\\tasks\\build",
            "cwd":     "${workspaceFolder}\\client"
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Linking",
            "program":  "${workspaceFolder}\\tasks\\link",
            "args":     ["r"],
            "cwd":      "${workspaceFolder}\\tasks\\"
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Publish",
            "program":  "${workspaceFolder}\\tasks\\publish",
            "cwd":      "${workspaceFolder}\\tasks\\",
            "console":  "integratedTerminal"
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Install",
            "program":  "${workspaceFolder}\\tasks\\install",
            "cwd":      "${workspaceFolder}\\tasks\\",
            "console":  "integratedTerminal"
        },
        {
            "type":    "chrome",
            "request": "launch",
            "name":    "Launch Chrome against localhost",
            "url":     "http://localhost:1337",
            "webRoot": "${workspaceFolder}\\server\\wwwroot"
        },
        {
            "type":    "chrome",
            "request": "attach",
            "name":    "Attach to Chrome",
            "port":    9222,
            "webRoot": "${workspaceFolder}\\server\\wwwroot"
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Tests",
            "program":  "${workspaceFolder}\\modules\\tests\\node_modules\\mocha\\bin\\_mocha",
            "cwd":      "${workspaceFolder}\\modules\\tests",
            "args":
            [
                "-u", "tdd",
                "--timeout", "999999",
                "--colors",
                "build"
            ],
            "console": "integratedTerminal",
            "sourceMapPathOverrides":
            {
                "webpack:///.\\~\\*": "${workspaceFolder}\\modules\\tests\\node_modules\\*",
                "webpack:///.\\*":    "${workspaceFolder}\\modules\\tests\\source\\*",
                "webpack:///*":       "*"
            },
            "sourceMaps":  true,
            "outFiles":    ["${workspaceFolder}/**/*.js"],
            "runtimeArgs": ["--nolazy"]
        },
    ]
}