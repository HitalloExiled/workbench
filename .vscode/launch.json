{
    "version": "0.2.0",
    "configurations":
    [
        {
            "type":          "node",
            "request":       "launch",
            "name":          "Launch Server",
            "program":       "${workspaceRoot}\\server\\node_modules\\@surface\\server\\index.js",
            "cwd":           "${workspaceRoot}\\server"//,
            //"preLaunchTask": "surface"
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Surface Compiler",
            "program":  "${workspaceRoot}\\client\\node_modules\\@surface\\compiler\\index.js",
            "args":     ["--task", "rebuild","--env", "dev", "--config", "./surface.config.json"],
            "cwd":      "${workspaceRoot}\\client",
            "outFiles": []
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Build All",
            "program":  "${workspaceRoot}\\tasks\\build",
            "cwd":      "${workspaceRoot}\\client",
            "outFiles": []
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Linking",
            "program":  "${workspaceRoot}\\tasks\\link",
            "args":     ["r"],
            "cwd":      "${workspaceRoot}\\tasks\\",
            "outFiles": []
        },
        
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch Publish",
            "program":  "${workspaceRoot}\\tasks\\publish",
            "cwd":      "${workspaceRoot}\\tasks\\",
            "console":  "integratedTerminal"
        },
        {
            "type":    "chrome",
            "request": "launch",
            "name":    "Launch Chrome against localhost",
            "url":     "http://localhost:1337",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type":    "chrome",
            "request": "attach",
            "name":    "Attach to Chrome",
            "port":    9222,
            "webRoot": "${workspaceRoot}"
        },
        {
            "type":     "node",
            "request":  "launch",
            "name":     "Launch compiler",
            "program":  "${workspaceRoot}\\client\\node_modules\\@surface\\compiler\\tasks\\build",
            //"args":     ["project=./"],
            "cwd":      "${workspaceRoot}\\client",
            "protocol": "inspector"
        }
    ]
}