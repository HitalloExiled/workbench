// Place your settings in this file to overwrite default and user settings.
{
    "workbench.iconTheme": "vscode-icons",
    "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
    "javascript.format.placeOpenBraceOnNewLineForFunctions": true,
    "typescript.tsdk": "modules/source/@surface/compiler/node_modules/typescript/lib",
    "editor.roundedSelection": false,
    "files.exclude":
    {
        "**/*.config":          true,
        "**/.git":              true,
        "**/.github":           true,
        "**/.gitignore":        true,
        "**/.gitmodules":       true,
        "**/.hg":               true,
        "**/.nycrc":            true,
        "**/.nyc_output":       true,
        "**/.svn":              true,
        "**/.vs":               true,
        "**/.DS_Store":         true,
        "**/coverage":          true,
        "**/node_modules":      true,
        "**/package.json":      false,
        "**/package-lock.json": true,
        "**/tslint.json":       false,
        "**/tsconfig*.json":    false,
        "**/CVS":               true,
        "**/LICENSE":           true,
        "**/README.md":         true,
        "**/*.js":              { "when": "$(basename).ts" },
        "**/*.d.ts":            { "when": "$(basename).js" },
        "**/*.js.map":          true,
    }
}