{
    "inputs": [
        {
            "default":     "default",
            "description": "Strategy type for dependency sync",
            "id":          "strategy-type",
            "options":     ["default", "force-version", "force-dependent-updates", "ignore-depentends"],
            "type":        "pickString",
        },
        {
            "default":     "*.*.*",
            "description": "Version for dependency sync",
            "id":          "sync-version",
            "type":        "promptString"
        }
    ],
    "tasks": [
        {
            "command": "driveup; node ./node_modules/@surface/compiler/cli.js -e production -t rebuild",
            "isBackground": true,
            "label": "Client Project - Build",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "driveup; node ./node_modules/@surface/compiler/cli.js -t build -w true",
            "isBackground": true,
            "label": "Client Project - Watch",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "npm run task:build",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "isBackground": true,
            "label": "Compile Modules",
            "options": {
                "cwd": "${workspaceFolder}/modules/tasks"
            },
            "problemMatcher": [
                "$tsc"
            ],
            "type": "shell"
        },
        {
            "command": "tsc",
            "isBackground": true,
            "label": "TS Compile File",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
        {
            "command": "npm run cover -s",
            "isBackground": true,
            "label": "Cover Modules",
            "options": {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "tsc; node ${workspaceFolder}/modules/tasks/cli cover ${file}",
            "isBackground": true,
            "label": "Cover File",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$tsc"
            ],
            "type": "shell"
        },
        {
            "command": "node ${workspaceFolder}/modules/tasks/cli publish https://registry.npmjs.org -t ${env:NPM_AUTH_TOKEN}",
            "isBackground": true,
            "label": "Publish to NPM - DEV",
            "presentation": {
                "reveal": "always"
            },
            "type": "shell",
            "problemMatcher": []
        },
        {
            "command": "node ${workspaceFolder}/modules/tasks/cli sync ${workspaceFolder}/modules/source/@surface -s ${input:strategy-type}",
            "isBackground": true,
            "label": "Sync Dependencies",
            "presentation": {
                "reveal": "always"
            },
            "type": "shell"
        },
        {
            "command": "node ${workspaceFolder}/modules/tasks/cli sync ${workspaceFolder}/modules/source/@surface -s ${input:strategy-type} -t ${input:sync-version}",
            "isBackground": true,
            "label": "Sync Dependencies version",
            "presentation": {
                "reveal": "always"
            },
            "type": "shell"
        },
        {
            "command": "tsc; node ${workspaceFolder}/modules/tasks/node_modules/mocha/bin/mocha --ui tdd ${fileBasenameNoExtension}.js",
            "isBackground": true,
            "label": "Test File",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
        {
            "command": "npm run test -s",
            "isBackground": true,
            "label": "Test Modules",
            "options": {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type": "shell"
        }
    ],
    "version": "2.0.0"
}