// Available variables which can be used inside of strings.
// ${workspaceFolder}: the root folder of the team
// ${file}: the current opened file
// ${fileBasename}: the current opened file's basename
// ${fileBasenameNoExtension}: the current opened file's basename without extension
// ${fileDirname}: the current opened file's dirname
// ${fileExtname}: the current opened file's extension
// ${cwd}: the current working directory of the spawned process
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format    
    "version": "2.0.0",
    "tasks":
    [
        {
            "label": "build",
            "command": "tsc",
            "presentation": {
                "reveal": "never"
            },
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                "$tsc"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        { 
            "label": "cover",            
            "command": "tsc && node ${workspaceFolder}\\modules\\tasks\\cli cover ${file}",
            "presentation": {
                "reveal": "always"
            },
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                "$tsc"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "test",
            "command": "tsc && mocha --ui tdd ${fileBasenameNoExtension}.js",
            "presentation": {
                "reveal": "always"
            },
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                "$tsc"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "build:all",
            "command": "cmd /c node ./tasks/build",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "client:build",
            "command": "driveup & cmd /c node ./node_modules/@surface/compiler/index.js -t rebuild",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceRoot}\\client"
            },
            "problemMatcher": []
        },
        {
            "label": "client:watch",
            "command": "driveup & cmd /c node ./node_modules/@surface/compiler/index.js -t rebuild -w true",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceRoot}\\client"
            },
            "problemMatcher": []
        },
        {
            "label": "code-split",
            "command": "cmd /c node ./node_modules/@surface/code-splitter/cli.js -c source -e views -o app/module-loader.ts",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceRoot}\\client"
            },
            "problemMatcher": []
        },        
        { 
            "label": "test:cover",
            "command": "npm run test:cover -s",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceRoot}\\modules"
            },
            "problemMatcher": []
        },
        {
            "label": "test:run",
            "command": "npm run test:run -s",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceRoot}\\modules"
            },
            "problemMatcher": []
        },
        {
            "label": "test:build",
            "command": "npm run test:build",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceRoot}\\modules"
            },
            "problemMatcher": []
        },
        {
            "label": "test:watch",
            "command": "npm run test:watch",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceRoot}\\modules"
            },
            "problemMatcher": []
        }
    ]
}