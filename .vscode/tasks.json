{
    "inputs": [
        {
            "default": "default",
            "description": "Strategy type for dependency sync",
            "id": "strategy-type",
            "options": [
                "default",
                "force-version",
                "force-dependent-updates",
                "ignore-depentends"
            ],
            "type": "pickString"
        },
        {
            "default": "*.*.*",
            "description": "Version for dependency sync",
            "id": "sync-version",
            "type": "promptString"
        },
        {
            "default": "@surface/core",
            "description": "Modules",
            "id": "modules",
            "type": "promptString"
        }
    ],
    "tasks": [
        {
            "command": "driveup; node ./node_modules/@surface/compiler/cli.js clean; node ./node_modules/@surface/compiler/cli.js build -m production",
            "isBackground": true,
            "label": "Client Project - Build",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "driveup; node ./node_modules/@surface/compiler/cli.js build -w true",
            "isBackground": true,
            "label": "Client Project - Watch",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "node cli clean; node cli build;",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "isBackground": true,
            "label": "Compile Modules",
            "options": {
                "cwd": "${workspaceFolder}/modules/tasks/"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "tsc",
            "isBackground": true,
            "label": "TS Compile File",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
        {
            "command": "nyc mocha --ui tdd source/@surface/*/tests/**/*.spec.js",
            "isBackground": true,
            "label": "Cover Modules",
            "options": {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "tsc; node ${workspaceFolder}/modules/tasks/cli cover ${file}",
            "isBackground": true,
            "label": "Cover File",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$tsc"
            ],
            "type": "shell"
        },
        {
            "command": "node ${workspaceFolder}/modules/tasks/cli install -m ${input:modules}",
            "isBackground": true,
            "label": "Install Modules",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "node ${workspaceFolder}/modules/tasks/cli publish https://registry.npmjs.org -t ${env:NPM_AUTH_TOKEN}",
            "isBackground": true,
            "label": "Publish to NPM - DEV",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "node ${workspaceFolder}/modules/tasks/cli sync ${workspaceFolder}/modules/source/@surface -s ${input:strategy-type}",
            "isBackground": true,
            "label": "Sync Dependencies",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "node ${workspaceFolder}/modules/tasks/cli sync ${workspaceFolder}/modules/source/@surface -s ${input:strategy-type} -t ${input:sync-version}",
            "isBackground": true,
            "label": "Sync Dependencies version",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "tsc; node ${workspaceFolder}/modules/node_modules/mocha/bin/mocha --ui tdd ${fileBasenameNoExtension}.js",
            "isBackground": true,
            "label": "Test File",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
        {
            "command": "npm run test -s",
            "isBackground": true,
            "label": "Test Modules",
            "options": {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type": "shell"
        }
    ],
    "version": "2.0.0"
}