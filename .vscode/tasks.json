{
    "inputs": [
        {
            "default": "default",
            "description": "Strategy type for dependency sync",
            "id": "strategy-type",
            "options": [
                "default",
                "force-version",
                "force-dependent-updates",
                "ignore-depentends"
            ],
            "type": "pickString"
        },
        {
            "default": "*.*.*",
            "description": "Version for dependency sync",
            "id": "sync-version",
            "type": "promptString"
        },
        {
            "default": "@surface/core",
            "description": "Modules",
            "id": "modules",
            "options": [
                "@surface/cli",
                "@surface/collection",
                "@surface/compiler",
                "@surface/core",
                "@surface/custom-element",
                "@surface/dependency-injection",
                "@surface/enumerable",
                "@surface/expression",
                "@surface/io",
                "@surface/mock",
                "@surface/reactive",
                "@surface/reflection",
                "@surface/router",
                "@surface/test-suite",
                "@surface/view-router",
                "@surface/web-host",
            ],
            "type": "pickString"
        }
    ],
    "tasks": [
        {
            "command": "driveup; node ./node_modules/@surface/compiler/cli.js clean; node ./node_modules/@surface/compiler/cli.js analyze",
            "isBackground": true,
            "label": "Client Project - Analyze",
            "options": {
                "cwd": "${workspaceFolder}/client",
                "env": {
                    "SURFACE_ENVIRONMENT": "development"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "driveup; node ${workspaceFolder}/modules/source/@surface/compiler/cli.js build -p ${workspaceFolder}/client --mode production",
            "isBackground": true,
            "label": "Client Project - Build",
            "options": {
                "cwd": "${workspaceFolder}/client",
                "env": {
                    "SURFACE_ENVIRONMENT": "development"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "driveup; node ${workspaceFolder}/node_modules/@surface/compiler/cli.js serve --hot",
            "isBackground": true,
            "label": "Client Project - Serve",
            "options": {
                "cwd": "${workspaceFolder}/client",
                // "env": {
                //     "SURFACE_ENVIRONMENT": "development"
                // }
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "driveup; node ./node_modules/@surface/compiler/cli.js build --watch --mode development",
            "isBackground": true,
            "label": "Client Project - Watch",
            "options": {
                "cwd": "${workspaceFolder}/client",
                "env": {
                    "SURFACE_ENVIRONMENT": "development"
                }
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "node cli clean; node cli build;",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "isBackground": true,
            "label": "Compile Modules",
            "options": {
                "cwd": "${workspaceFolder}/modules/tasks/"
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "${workspaceFolder}/modules/node_modules/.bin/tsc.ps1",
            "label": "TS Compile File",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
        {
            "command": "npm run cover",
            "isBackground": true,
            "label": "Cover Modules",
            "options": {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "tsc; node ${workspaceFolder}/modules/tasks/cli cover ${file}",
            "isBackground": true,
            "label": "Cover File",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$tsc"
            ],
            "type": "shell"
        },
        {
            "command": "node ${workspaceFolder}/modules/tasks/cli publish https://registry.npmjs.org -t ${env:NPM_AUTH_TOKEN} -c development",
            "isBackground": true,
            "label": "Publish to NPM - DEV",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "tsc; node ${workspaceFolder}/modules/node_modules/mocha/bin/mocha --ui tdd ${fileBasenameNoExtension}.js",
            "isBackground": true,
            "label": "Test File",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
        {
            "command": "npm run test -s",
            "isBackground": true,
            "label": "Test Modules",
            "options": {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type": "shell"
        }
    ],
    "version": "2.0.0"
}