{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format    
    "version": "0.1.0",
    "tasks":
    [
        {
            "taskName":       "build",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "node ./tasks/build"],
            "showOutput":     "always",
            "isBackground":   false
        },
        {
            "taskName":       "surface",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "node ./node_modules/@surface/compiler/index.js -t rebuild"],
            "options":
            {
                "cwd": "${workspaceRoot}\\client"
            },
            "showOutput":   "always",
            "isBackground": false
        },
        {
            "taskName":       "surface-watch",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "node ./node_modules/@surface/compiler/index.js -t rebuild -w true"],
            "options":
            {
                "cwd": "${workspaceRoot}\\client"
            },
            "showOutput":   "always",
            "isBackground": false
        }
    ]
}