// Available variables which can be used inside of strings.
// ${workspaceFolder}: the root folder of the team
// ${file}: the current opened file
// ${fileBasename}: the current opened file's basename
// ${fileBasenameNoExtension}: the current opened file's basename without extension
// ${fileDirname}: the current opened file's dirname
// ${fileExtname}: the current opened file's extension
// ${cwd}: the current working directory of the spawned process
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format    
    "version": "2.0.0",
    "tasks":
    [
        {
            "command":      "tsc",
            "isBackground": false,
            "label":        "ts:build",
            "options":
            {
                "cwd": "${fileDirname}"
            },
            "presentation":
            {
                "reveal": "always"
            },
            "problemMatcher":
            {
                "base":         "$tsc",
                "fileLocation": ["relative", "${fileDirname}"]
            },
            "type": "shell",
        },
        { 
            "command":      "tsc; node ${workspaceFolder}/modules/tasks/cli cover ${file}",
            "isBackground": true,
            "label":        "cover",
            "presentation":
            {
                "reveal": "always"
            },
            "problemMatcher":
            [
                "$tsc"
            ],
            "options":
            {
                "cwd": "${fileDirname}"
            },
            "type": "shell",
        },
        {
            "command":      "tsc; node ${workspaceFolder}/modules/node_modules/mocha/bin/mocha --ui tdd ${fileBasenameNoExtension}.js",
            "isBackground": true,
            "label":        "test",
            "options":
            {
                "cwd": "${fileDirname}"
            },
            "presentation":
            {
                "reveal": "always"
            },
            "problemMatcher":
            {
                "base":         "$tsc",
                "fileLocation": ["relative", "${fileDirname}"]
            },
            "type": "shell",
        },
        {
            "command":      "npm run task:build",
            "isBackground": true,
            "label":        "task:build",
            "problemMatcher":
            [
                "$tsc"
            ],
            "group":
            {
                "isDefault": true,
                "kind":      "build",
            },
            "options":
            {
                "cwd": "${workspaceFolder}/modules"
            },
            "type": "shell",
        },
        {
            "command":      "npm run task:relink",
            "isBackground": true,
            "label":        "task:relink",
            "type":         "shell",
        },
        {
            "label":       "client:build",
            "command":     "driveup; node ./node_modules/@surface/compiler/cli.js -e production -t rebuild",
            "isBackground": true,
            "options":
            {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type":           "shell",
        },
        {
            "command":      "driveup; node ./node_modules/@surface/compiler/cli.js -t rebuild -w true",
            "isBackground": true,
            "label":        "client:watch",
            "options":
            {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type":           "shell",
        },
        {
            "command":      "node ./node_modules/@surface/code-splitter/cli.js -c source -e views -o app/module-loader.ts",
            "isBackground": true,
            "label":        "code-split",
            "options":
            {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type":           "shell",
        },        
        { 
            "command":      "npm run test:cover -s",
            "isBackground": true,
            "label":        "test:cover",
            "options":
            {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type":           "shell",
        },
        {
            "command":      "npm run test:run -s",
            "isBackground": true,
            "label":        "test:run",
            "options":
            {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type": "shell",
        },
        {
            "command":      "npm run test:build",
            "isBackground": true,
            "label":        "test:build",
            "options":
            {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type": "shell",
        },
        {
            "command":     "npm run test:watch",
            "isBackground": true,
            "label":        "test:watch",
            "options":
            {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type":         "shell",
        }
    ]
}