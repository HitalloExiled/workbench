{
    "inputs": [
        {
            "default": "development",
            "description": "Build mode",
            "id": "mode",
            "options": [
                "development",
                "production"
            ],
            "type": "pickString"
        }
    ],
    "tasks": [
        {
            "command": "driveup; node ${workspaceFolder}/node_modules/@surface/builder/cli.js analyze --mode=${input:mode}",
            "isBackground": true,
            "label": "builder-analyze",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            // "command": "driveup; node ${workspaceFolder}/modules/packages/@surface/builder/cli.js build --config=${workspaceFolder}/client/surface.builder.json --mode=${input:mode}",
            "command": "driveup; node ${workspaceFolder}/modules/packages/@surface/builder/cli.js build",
            "isBackground": true,
            "label": "builder-build",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "driveup; node ${workspaceFolder}/node_modules/@surface/builder/cli.js serve --mode=${input:mode}",
            "isBackground": true,
            "label": "builder-serve",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "driveup; node ${workspaceFolder}/modules/packages/@surface/builder/cli.js build -p ${workspaceFolder}/client --mode=${input:mode} --watch",
            "isBackground": true,
            "label": "builder-watch",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "node cli clean; node cli build;",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "isBackground": true,
            "label": "build-all",
            "options": {
                "cwd": "${workspaceFolder}/modules/tasks/"
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "${workspaceFolder}/modules/node_modules/.bin/tsc.ps1",
            "label": "tsc",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
        {
            "command": "npm run cover",
            "isBackground": true,
            "label": "cover-all",
            "options": {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "node ${workspaceFolder}/modules/tasks/cli cover ${file}",
            "isBackground": true,
            "label": "cover-file",
            "options": {
                "cwd": "${workspaceFolder}/modules"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$tsc"
            ],
            "type": "shell"
        },
        {
            "command": "node ${workspaceFolder}/modules/tasks/cli publish https://registry.npmjs.org --token=${env:NPM_AUTH_TOKEN} --config=nightly --timestamp=${input:timestamp} --debug",
            "isBackground": true,
            "label": "publish-nightly",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "node ${workspaceFolder}/modules/tasks/cli publish https://registry.npmjs.org --token=${env:NPM_AUTH_TOKEN} --config=release --debug",
            "isBackground": true,
            "label": "publish-release",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "${workspaceFolder}/modules/node_modules/.bin/mocha.cmd --loader=@surface/mock-loader --ui tdd ${fileDirname}/${fileBasenameNoExtension}.js",
            "isBackground": true,
            "label": "test-file",
            "options": {
                "cwd": "${workspaceFolder}/modules"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
        {
            "command": "npm run test -s",
            "isBackground": true,
            "label": "test-all",
            "options": {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type": "shell"
        }
    ],
    "version": "2.0.0"
}