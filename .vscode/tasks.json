{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format    
    "version": "0.1.0",
    "tasks":
    [
        {
            "taskName":       "build-all",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "node ./tasks/build"],
            "showOutput":     "always",
            "isBackground":   false
        },
        {
            "taskName":       "client[build]",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "node ./node_modules/@surface/compiler/index.js -t rebuild"],
            "options":
            {
                "cwd": "${workspaceRoot}\\client"
            },
            "showOutput":   "always",
            "isBackground": false
        },
        {
            "taskName":       "client[watch]",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "node ./node_modules/@surface/compiler/index.js -t rebuild -w true"],
            "options":
            {
                "cwd": "${workspaceRoot}\\client"
            },
            "showOutput":   "always",
            "isBackground": false
        },
        {
            "taskName":       "code-split",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "node ./node_modules/@surface/code-splitter/index.js -c source -e views -o app/lazy-loader.ts"],
            "options":
            {
                "cwd": "${workspaceRoot}\\client"
            },
            "showOutput":   "always",
            "isBackground": false
        },
        {
            "taskName":       "server[build]",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "tsc"],
            "options":
            {
                "cwd": "${workspaceRoot}\\server\\source"
            },
            "showOutput":   "always",
            "isBackground": false
        },
        {
            "taskName":       "server[watch]",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "tsc -w"],
            "options":
            {
                "cwd": "${workspaceRoot}\\server\\source"
            },
            "showOutput":   "always",
            "isBackground": false
        },
        {
            "taskName":       "tests[build]",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "node ./node_modules/@surface/compiler/index.js -t rebuild"],
            "options":
            {
                "cwd": "${workspaceRoot}\\modules\\tests"
            },
            "showOutput":   "always",
            "isBackground": false
        },
        {
            "taskName":       "tests[watch]",
            "isBuildCommand": true,
            "command":        "cmd",
            "isShellCommand": true,
            "args":           ["/c", "node ./node_modules/@surface/compiler/index.js -t rebuild -w true"],
            "options":
            {
                "cwd": "${workspaceRoot}\\modules\\tests"
            },
            "showOutput":   "always",
            "isBackground": false
        }        
    ]
}