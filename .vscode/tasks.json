// Available variables which can be used inside of strings.
// ${workspaceFolder}: the root folder of the team
// ${file}: the current opened file
// ${fileBasename}: the current opened file's basename
// ${fileBasenameNoExtension}: the current opened file's basename without extension
// ${fileDirname}: the current opened file's dirname
// ${fileExtname}: the current opened file's extension
// ${cwd}: the current working directory of the spawned process
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks":
    [
        {
            "label":       "Client Project - Build",
            "command":     "driveup; node ./node_modules/@surface/compiler/cli.js -t rebuild",
            "isBackground": true,
            "options":
            {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type":           "shell",
        },
        {
            "command":      "driveup; node ./node_modules/@surface/compiler/cli.js -t build -w true",
            "isBackground": true,
            "label":        "Client Project - Watch",
            "options":
            {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [],
            "type":           "shell",
        },
        {
            "command":      "npm run task:build",
            "isBackground": true,
            "label":        "Compile Modules",
            "problemMatcher":
            [
                "$tsc"
            ],
            "group":
            {
                "isDefault": true,
                "kind":      "build",
            },
            "options":
            {
                "cwd": "${workspaceFolder}/modules"
            },
            "type": "shell",
        },
        {
            "command":      "tsc",
            "isBackground": false,
            "label":        "TS Compile File",
            "options":
            {
                "cwd": "${fileDirname}"
            },
            "presentation":
            {
                "reveal": "always"
            },
            "problemMatcher":
            {
                "base":         "$tsc",
                "fileLocation": ["relative", "${fileDirname}"]
            },
            "type": "shell",
        },
        {
            "command":      "npm run cover -s",
            "isBackground": true,
            "label":        "Cover Modules",
            "options":
            {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type":           "shell",
        },
        {
            "command":      "tsc; node ${workspaceFolder}/modules/tasks/cli cover ${file}",
            "isBackground": true,
            "label":        "Cover File",
            "presentation":
            {
                "reveal": "always"
            },
            "problemMatcher":
            [
                "$tsc"
            ],
            "options":
            {
                "cwd": "${fileDirname}"
            },
            "type": "shell",
        },
        {
            "command":      "tsc; node ${workspaceFolder}/modules/node_modules/mocha/bin/mocha --ui tdd ${fileBasenameNoExtension}.js",
            "isBackground": true,
            "label":        "Test File",
            "options":
            {
                "cwd": "${fileDirname}"
            },
            "presentation":
            {
                "reveal": "always"
            },
            "problemMatcher":
            {
                "base":         "$tsc",
                "fileLocation": ["relative", "${fileDirname}"]
            },
            "type": "shell",
        },
        {
            "command":      "npm run test -s",
            "isBackground": true,
            "label":        "Test Modules",
            "options":
            {
                "cwd": "${workspaceFolder}/modules"
            },
            "problemMatcher": [],
            "type": "shell",
        },
    ]
}